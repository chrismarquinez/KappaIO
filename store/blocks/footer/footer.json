{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-desktop",
      "flex-layout.row#footer-desktop-payment",
      "whatsapp-button"
    ]
  },
  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#footer-mobile",
      "flex-layout.row#footer-desktop-payment"
    ]
  },
  "flex-layout.row#footer-desktop": {
    "title": "Pie de pagina",
    "children": [
      "vtex.menu@2.x:menu#firts-column",
      "vtex.menu@2.x:menu#second-column",
      "vtex.menu@2.x:menu#third-column",
      "vtex.menu@2.x:menu#fourth-column"
    ]
  },
  "flex-layout.row#footer-desktop-payment": {
    "props": {
      "fullWidth": true
    },
    "children": ["flex-layout.col#means-payment", "flex-layout.col#powered-by"]
  },
  "flex-layout.row#footer-mobile": {
    "title": "Pie de pagina mobile",
    "props": {
      "blockClass": "footer-container--mobile"
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },

  "newsletter-form-custom": {
    "title": "Configuracion boton Newsletter",
    "props": {
      "placeholder": "Ingresa tu E-mail",
      "checkboxLabel": "Acepto el tratamiento de mis datos personales de acuerdo con la {firstLink}.",
      "labelButton": "ENVIAR",
      "firstLabelLink": {
        "url": "/",
        "text": "política de tratamiento de datos personales"
      }
    }
  },

  "whatsapp-button": {
    "title": "Configuracion boton WhatsApp",
    "props": {
      "url": "https://api.whatsapp.com/send?phone=57 324 5969498&text=Hola! quisiera asesoría en mi proceso de compra",
      "image": "assets/img/home/whatsapp-btn.png",
      "textPopUp": "¡Te ayudamos con tu compra!"
    }
  }
}
